                    this.dgvRequests.DataSource = ViewState["table"];
                    this.dgvRequests.DataBind();
                    break;
                case 3:
                    this.lbLocationTag.Text = "Home >> All List";
                    ViewState["table"] = RequestMgr.GetAllRequests();
                    this.dgvRequests.DataSource = ViewState["table"];
                    this.dgvRequests.DataBind();
                    //GroupRows(dgvRequests, 1);
                    LoadControl();
                    break;
                default:
                    break;
            }
        }

